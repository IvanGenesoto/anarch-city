{
  "name": "anarch-city",
  "version": "0.1.0",
  "description": "A massively multiplayer persistent online world for people who want to experience a simulated anarchic society.",
  "main": "server/main.js",
  "scripts": {
    "start": "node -r esm .",
    "prestart": "run-s bundle",
    "bundle": "browserify -p esmify client/index.js -o server/public/main.js",
    "start:prod": "node -r esm .",
    "prestart:prod": "run-s bundle prune",
    "prune": "npm prune --production",
    "stage:ci": "run-s clean lint check test",
    "clean": "npm ci && rimraf server/public/main.js",
    "lint": "eslint .",
    "check": "depcheck",
    "test": "mocha -r esm \"server/**/*.test.js\" \"client/**/*.test.js\"",
    "stage": "run-s lint:fix update stage:ci",
    "lint:fix": "eslint --fix .",
    "update": "ncu -u",
    "watch": "run-p watch:*",
    "watch:server": "nodemon -e js,html,css -r esm .",
    "watch:client": "watchify -p esmify client/index.js -o server/public/main.js"
  },
  "dependencies": {
    "bowser": "^2.10.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "performance-now": "^2.1.0",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0"
  },
  "devDependencies": {
    "browserify": "^16.5.1",
    "chai": "^4.2.0",
    "depcheck": "^1.0.0",
    "eslint": "^7.5.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "esmify": "^2.1.1",
    "htmlhint": "^0.14.1",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.4",
    "npm-check-updates": "^7.0.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^20.0.0",
    "watchify": "^3.11.1"
  },
  "keywords": [],
  "author": "Ivan Genesoto",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IvanGenesoto/anarch-city.git"
  },
  "bugs": {
    "url": "https://github.com/IvanGenesoto/anarch-city/issues"
  },
  "homepage": "https://github.com/IvanGenesoto/anarch-city#readme"
}
