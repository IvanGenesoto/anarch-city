{
  "name": "anarch-city",
  "version": "1.0.0",
  "description": "A massively multiplayer persistent online world for people who want to experience a simulated anarchic society.",
  "main": "server/index.js",
  "dependencies": {
    "express": "^4.17.1",
    "performance-now": "^2.1.0",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "esm": "^3.2.25"
  },
  "devDependencies": {
    "browserify": "^16.5.1",
    "copyfiles": "^2.3.0",
    "esmify": "^2.1.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "eslint": "^7.3.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "htmlhint": "^0.14.0",
    "nodemon": "^2.0.4",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^20.0.0",
    "watchify": "^3.11.1"
  },
  "scripts": {
    "clean": "rimraf server/public",
    "copy": "copyfiles \"images/**\" index.html styles.css server/public",
    "bundle": "browserify -p esmify client/index.js -v -o server/public/main.js",
    "build": "run-s clean && run-p copy bundle",
    "prestart": "run-s build",
    "start": "node -r esm .",
    "start:prod": "node -r esm .",
    "poststart:prod": "npm rm esm --no-save",
    "watch:server": "nodemon -r esm .",
    "watch:client": "watchify -p esmify client/index.js -v -o server/public/main.js",
    "prewatch": "run-s clean copy",
    "watch": "run-p watch:*",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Ivan Genesoto",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IvanGenesoto/anarch-city.git"
  },
  "bugs": {
    "url": "https://github.com/IvanGenesoto/anarch-city/issues"
  },
  "homepage": "https://github.com/IvanGenesoto/anarch-city#readme"
}
